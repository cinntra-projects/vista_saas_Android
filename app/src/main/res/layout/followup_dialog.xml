<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/graph_size_350"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_20"
            android:fontFamily="@font/muli_semibold"
            android:gravity="center"
            android:text="Follow Up"
            android:textColor="@color/colorBottomDialogDefaultButton"
            android:textSize="@dimen/size_20" />

        <!-- Radio Group for Follow Up and Reminder -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbFollowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:button="@drawable/radio_button_selector"
                android:paddingStart="10dp"
                android:checked="true"
                android:text="Follow Up"
                android:textColor="@color/black" />


            <RadioButton
                android:id="@+id/rbReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:button="@drawable/radio_button_selector"

                android:paddingStart="10dp"
                android:text="Reminder"
                android:textColor="@color/black" />
        </RadioGroup>


        <!-- Date TextView -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/date_mand"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <!-- Date Section -->
        <RelativeLayout
            android:id="@+id/viewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/rounded_border_edit">

            <EditText
                android:id="@+id/date_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:background="@null"
                android:focusable="false"
                android:fontFamily="@font/muli_regular"
                android:hint="DD-MM-YYYY"
                android:paddingStart="@dimen/size_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/date_icon" />
        </RelativeLayout>

        <!-- Time TextView -->
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:visibility="gone"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/time_mand"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <!-- Time Section -->
        <RelativeLayout
            android:id="@+id/viewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:visibility="gone"
            android:background="@drawable/rounded_border_edit">

            <EditText
                android:id="@+id/time_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:background="@null"
                android:focusable="false"

                android:fontFamily="@font/muli_regular"
                android:hint="HH:MM"
                android:paddingLeft="@dimen/size_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10"
                android:background="@drawable/time" />
        </RelativeLayout>


        <TextView
            android:id="@+id/communication_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            android:text="@string/select_mode_of_communication"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCommunication"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Mode Of Communication"
            android:layout_marginTop="@dimen/size_2"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp">

            <AutoCompleteTextView
                android:id="@+id/communication_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:dropDownHeight="200dp"
                android:entries="@array/communications"
                android:maxLines="1"
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Comment Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/comment_mand"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/comment_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/rounded_border_edit"
            android:fontFamily="@font/muli_regular"
            android:gravity="start"
            android:hint="Enter comment"
            android:padding="@dimen/size_5"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <!-- Add Button -->
        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/size_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_20"
            android:background="@drawable/button_rounded_corner"
            android:fontFamily="@font/muli_semibold"
            android:gravity="center"
            android:text="Add"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>


</ScrollView>